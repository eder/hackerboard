<%= form_tag login_path do %>
  <p>
    <%= label_tag :email, t("labels.login.email") %>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password, t("labels.login.password") %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag t("labels.login.submit") %>
  </p>
<% end %>